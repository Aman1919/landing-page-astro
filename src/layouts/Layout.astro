---
interface Props {
	title: string;
}

const { title ='Landing Page' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body > 

		<slot />
	</body>
</html>
<style is:global>
:root{
--relative-width:90%;
--primary-orange:#BF8436;
--primary-orange-hover:#e9a245e7;
}

.wrapper-container{
width: var(--relative-width);;
margin:auto;
}

main{
width: 100%;
}

button{
background-color: var(--primary-orange);
color: white;
padding: .5rem 0.8rem;
}
button:hover{
background-color: var(--primary-orange-hover);
}

 .bar{
background-color: var(--primary-orange);
width: 100px;
height: 5px;
border-radius: 10px;
margin: 20px 0px;
}
</style>