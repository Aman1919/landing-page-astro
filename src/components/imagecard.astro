---
import { Image } from "astro:assets"
import BannerImge from "../assests/banner.jpg"

const {img, title, desc, link} = Astro.props
---

<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow ">
    <a href="#">
        <Image class="rounded-t-lg" src={BannerImge} alt={title+"-img"} />
    </a>
    <div class="p-5">
        <a href={link}>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700">{desc}</p>
        <a href={link} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[var(--primary-orange)] rounded-lg hover:bg-[var(--primary-orange-hover)] focus:ring-4 focus:outline-none">
            View more
             <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</div>
