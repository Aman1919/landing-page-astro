---
import Image from 'astro/components/Image.astro';
import Cross from '../assests/cross.svg';

const {services} = Astro.props;
---


<ul class="fixed inset-y-0 right-0 w-full bg-black text-white p-12 transform translate-x-full uppercase transition-transform duration-300 ease-in-out" id="mobile-menu">
    <button class="absolute top-2 right-2 text-white focus:outline-none w-14 h-14 bg-transparent" id="cross-btn"><Image src={Cross} alt="" /></button>
    <li><a href="#" class="block py-2">HOME</a></li>
    <li><a href="/about" class="block py-2">ABOUT</a></li>
    <li class="relative">
      <a href="#" class="flex justify-between items-center py-2" id="mobile-services-btn">
        Services <span>+</span>
      </a>
      <!-- Mobile Submenu -->
      <ul class="hidden flex-col space-y-2 ml-4 mt-2 bg-gray-800 p-4 rounded-md" id="mobile-submenu">
        {
services.map((service) => (
        <li><a href={`/services/${service.slug}`} class="block text-sm">{service.data.title}</a></li>
))
}
      </ul>
    </li>
    <li><a href="/blog" class="block py-2">BLOG</a></li>
    <li><a href="/contact" class="block py-2">CONTACT</a></li>
  </ul>